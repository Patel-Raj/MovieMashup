<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.patel.moviemashup">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".GeneralFiles.MyApplicationClass"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".GeneralFiles.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MovieFiles.MoviePage" />
        <activity android:name=".GeneralFiles.BaseActivity" />
        <activity android:name=".GeneralFiles.MainActivity" />
        <!--
 ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".TVFiles.TvActivity"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".CelebritiesFiles.CelebritiesActivity"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".MovieFiles.MovieDetails"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".TVFiles.TVDetails"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".CelebritiesFiles.CelebritiesDetails"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity android:name=".WatchList.YourWatchList"></activity>
    </application>

</manifest>